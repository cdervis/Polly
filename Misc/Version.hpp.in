#pragma once

#include "Polly/StringView.hpp"

namespace Polly
{
struct Version
{
    int major    = 0;
    int minor    = 0;
    int revision = 0;
};

/// Gets the currently used version of Polly.
static constexpr auto version = Version{ ${CMAKE_PROJECT_VERSION_MAJOR}, ${CMAKE_PROJECT_VERSION_MINOR}, ${CMAKE_PROJECT_VERSION_PATCH} };

/// Gets the currently used version of Polly as a display string.
static constexpr auto versionString = "${CMAKE_PROJECT_VERSION_MAJOR}.${CMAKE_PROJECT_VERSION_MINOR}.${CMAKE_PROJECT_VERSION_PATCH}"_sv;
}